+TCPSocket* DistackTCPSocketMap::findSocketFor(IPvXAddress adr)
+{
+	SocketMap::iterator i = socketMap.begin();
+	SocketMap::iterator iend = socketMap.end();
+	for (; i != iend; i++)
+	{
+		if ((i->second)->getRemoteAddress() == adr)
+		{
+			return i->second;
+		}
+	}
+	return NULL;
+}
