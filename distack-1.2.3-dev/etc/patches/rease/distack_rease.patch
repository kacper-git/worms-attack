+TCPSocket* DistackTCPSocketMap::removeSocket(TCPSocket* socket)
+{
+	SocketMap::iterator i = socketMap.find(socket->getConnectionId());
+	if (i != socketMap.end())
+		socketMap.erase(i);
+	return socket;
